@model MVC_Intro.ViewModels.EmployeeDepartmentDetailViewModel
<h2>List of Employees</h2>

@Html.ActionLink("Add an Employee", "create")

<table>
    @foreach (var employee in Model.Employees)
    {
    <tr>
        <td>@Html.DisplayFor(ModelItem => employee.Name)</td>
        <td>@Html.DisplayFor(ModelItem => employee.DepartmentName)</td>
        <td>@Html.ActionLink("edit", "Edit", new { employeeId = employee.EmployeeId })</td>
        <td>@Html.ActionLink("delete", "Delete", new { employeeId = employee.EmployeeId})</td>
    </tr>
    }
</table>

